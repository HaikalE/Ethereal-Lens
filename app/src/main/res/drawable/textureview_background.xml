<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <!-- Warna bayangan -->
            <corners android:radius="16dp"/> <!-- Sudut membulat untuk bayangan -->
        </shape>
    </item>

    <!-- Latar belakang dengan sudut membulat -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna latar belakang utama -->
            <corners android:radius="16dp"/> <!-- Sudut membulat -->
        </shape>
    </item>
</layer-list>
